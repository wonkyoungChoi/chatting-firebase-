<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/chatmain_top"
        android:background="#DBDBDB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#191919"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="스토리 작성"
            android:layout_marginLeft="50dp" />


        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="17sp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/border_upload"
            android:text="작성 완료"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/chatmain_top"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/boardplus_mid1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/border3"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <ImageView
                android:id="@+id/addImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_baseline_add_a_photo_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boardplus_mid1"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border3"
                android:text="날짜 선택하기"
                android:textColor="#939393"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/date_mid"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/addboard_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border3"
                android:hint="제목"
                android:textColor="#000000"
                android:textColorHint="#939393"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_mid"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/addboard_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/border3"
                android:hint="내용"
                android:textColor="#000000"
                android:textColorHint="#939393"
                android:textSize="25sp" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>